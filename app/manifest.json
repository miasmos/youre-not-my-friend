{
  "manifest_version": 2,
  "name": "You're Not My Friend",
  "description": "Rejects LinkedIn friend requests from recruiters.",

  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["zepto.js", "background.js"],
      "run_at": "document_idle"
    }
  ],
  "version": "1.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}